pipeline {
    agent { docker { 
        image 'node:lts-bullseye-slim' 
        args '-p 3000:3000'
        } }
    stages {
        stage('init') {
            steps {
                sh 'ls -ltr'
                sh 'npm install'
            }
        }
        stage('build') {
            steps {
                sh 'ng build'
            }
        }
    }
}